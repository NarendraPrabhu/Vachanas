<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="vachana"
            type="com.vachanasaahitya.vachanas.data.Vachana"/>
        <variable
            name="events"
            type="com.vachanasaahitya.vachanas.ui.events.VachanaItemEventListener"/>
    </data>
    <RelativeLayout
        android:minHeight="60dp"
        android:elevation="3dp"
        android:background="@drawable/item_bg"
        android:padding="3dp"
        android:onClick="@{(v)->events.select(vachana)}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/vachana_vachana"
            android:textSize="16sp"
            android:lineSpacingExtra="3dp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical|left"
            android:lines="4"
            android:maxLines="4"
            android:text="@{vachana.vachana}"
            android:minHeight="50dp"
            android:padding="10dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/vachana_name"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:lines="1"
            android:text="@{vachana.name}"
            android:layout_below="@id/vachana_vachana"
            android:maxLines="1"
            android:gravity="right|center_vertical"
            android:minHeight="20dp"
            android:padding="10dp"
            android:layout_height="wrap_content"/>
        <CheckedTextView
            android:layout_width="15dp"
            android:minHeight="15dp"
            android:focusable="false"
            android:layout_margin="5dp"
            android:minWidth="15dp"
            android:clickable="false"
            android:checked="@{vachana.isFavorite}"
            android:background="@drawable/selector_favorite"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/vachana_favorite"
            android:layout_height="15dp" />
    </RelativeLayout>
</layout>